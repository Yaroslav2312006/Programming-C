#include <stdio.h>      // Подключаем библиотеку для ввода-вывод
#include <stdlib.h>     // Подключаем библиотеку для работы с функциями преобразования
#include <string.h>     // Подключаем библиотеку для работы со строками

// Определяем макрос MAX для нахождения максимального значения между двумя числами
#define MAX(a, b) ((a) > (b) ? (a) : (b))

int main() {
    char input[256];    // Буфер для ввода строки, максимальная длина 255 символов + 1 для '\0'
    int numbers[100];   // Массив для хранения целых чисел, максимальная длина 100 чисел
    int count = 0;      // Счетчик для количества введенных чисел

    printf("Введите числа через пробел: "); // Запрашиваем у пользователя ввод чисел
    fgets(input, sizeof(input), stdin);      // Читаем строку ввода пользователя

    // Разбиваем строку на токены и преобразуем их в числа
    char *token = strtok(input, " ");       // Получаем первый токен, разбивая по пробелам
    while (token != NULL) {                  // Пока есть токены
        numbers[count++] = atoi(token);      // Преобразуем токен в число и сохраняем в массив, увеличиваем счетчик
        token = strtok(NULL, " ");           // Получаем следующий токен
    }

    // Находим максимальное число с помощью макроса
    int max_value = numbers[0];              // Инициализируем максимальное значение первым элементом массива
    for (int i = 1; i < count; i++) {        // Проходим по остальным элементам массива
        max_value = MAX(max_value, numbers[i]); // Используем макрос для нахождения максимума
    }

    printf("Максимальное число: %d\n", max_value); // Выводим найденное максимальное число

    return 0;                                  // Завершаем программу с кодом возврата 0 (успешно)
}
